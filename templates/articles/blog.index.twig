{% extends "index.twig" %}

{% block content %}
    {% for article in articles %}
        <div class="post-preview">
            <a href="{{ uri.base.full }}{{ article.category.alias }}/{{ article.alias }}">
                <h2 class="post-title">
                    {{ article.title }}
                </h2>
            </a>
            <p class="post-meta">Posted by {{ article.createdBy.name }} on {{ renderDate(article.dateAdded, 'l, F j, Y') }}</p>
            <p>{{ getFirstParagraph(article.text) }}</p>
        </div>
        {% if not loop.last %}
            <hr />
        {% endif %}
    {% endfor %}
{% endblock %}
