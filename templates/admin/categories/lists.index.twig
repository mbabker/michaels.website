{% extends "index.twig" %}

{% block title %}Manage Michael's Website Categories{% endblock %}

{% block contentHeaderText %}Category Manager{% endblock %}

{% block breadcrumb %}<li><a href="{{ uri.base.full }}manager/{{ extension }}">{{ getBreadcrumb(extension)|raw }}</a></li><li class="active">{{ getBreadcrumb('categories')|raw }}</li>{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Categories - {{ extension|capitalize }}</h3>
                </div>
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tr>
                            <th style="width: 10px">ID</th>
                            <th>Name</th>
                        </tr>
                        {% if categories|length %}
                            {% for category in categories %}
                                <tr>
                                    <td>{{ category.id }}</td>
                                    <td>
                                        <a href="{{ uri.base.full }}manager/{{ extension }}/categories/edit/{{ category.id }}">{{ category.title }}</a><br />
                                        <small>{{ category.alias }}</small>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr class="warning">
                                <td colspan="2">No Categories Found</td>
                            </tr>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
