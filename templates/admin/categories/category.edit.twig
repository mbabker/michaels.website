{% extends "index.twig" %}

{% block title %}Manage Michael's Website Categories{% endblock %}

{% block contentHeaderText %}Category Manager - Edit [{{ category.title }}]{% endblock %}

{% block breadcrumb %}<li>{{ getBreadcrumb(extension)|raw }}</li><li>{{ getBreadcrumb('categories')|raw }}</li><li class="active">{{ getBreadcrumb('category')|raw }} [{{ category.title }}]</li>{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Edit [{{ category.title }}]</h3>
                </div>
                <form role="form" method="post" action="{{ uri.base.full }}manager/{{ extension }}/categories/save/{{ category.id }}">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="category_title">Title</label>
                            <input type="text" class="form-control" id="category_title" name="category[title]" placeholder="Enter the category's title" value="{{ category.title }}" />
                        </div>
                        <div class="form-group">
                            <label for="category_alias">Alias</label>
                            <input type="text" class="form-control" id="category_alias" name="category[alias]" placeholder="Enter the category's alias" value="{{ category.alias }}" />
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" {{ category.published ? 'checked' : '' }} id="category_published" name="category[published]"> Published
                            </label>
                        </div>
                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Additional Details</h3>
                </div>
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Category ID</label>
                            <p class="form-control-static">{{ category.id }}</p>
                        </div>
                        <div class="form-group">
                            <label>Created Time</label>
                            <p class="form-control-static">{{ renderDate(category.dateAdded) }}</p>
                        </div>
                        <div class="form-group">
                            <label>Last Updated</label>
                            <p class="form-control-static">{{ renderDate(category.dateModified) }}</p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
