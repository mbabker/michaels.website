{% extends "index.twig" %}

{% block title %}Manage Michael's Website Articles{% endblock %}

{% block contentHeaderText %}Article Manager - {% if isNew %}Add Article {% else %}Edit [{{ article.title }}]{% endif %}{% endblock %}

{% block breadcrumb %}<li>{{ getBreadcrumb('articles')|raw }}</li><li class="active">{{ getBreadcrumb('article')|raw }} {% if isNew %}Add{% else %}[{{ article.title }}]{% endif %}</li>{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{% if isNew %}Add Article {% else %}Edit [{{ article.title }}]{% endif %}</h3>
                </div>
                <form role="form" method="post" action="{{ uri.base.full }}manager/articles/save/{{ article.id }}">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="article_title">Title</label>
                            <input type="text" class="form-control" id="article_title" name="article[title]" placeholder="Enter the article's title" value="{{ article.title }}" />
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="article_alias">Alias</label>
                                <input type="text" class="form-control" id="article_alias" name="article[alias]" placeholder="Enter the article's alias" value="{{ article.alias }}" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Category</label>
                                {{ _self.selectCategoryList(article.category.id) }}
                            </div>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" {{ article.published ? 'checked' : '' }} id="article_published" name="article[published]"> Published
                            </label>
                        </div>
                        <textarea id="article_editor" name="article[text]" rows="10" cols="80">
                            {{ article.text }}
                        </textarea>
                        <h4>Additional Options</h4>
                        <div class="form-group">
                            <label for="article_image">Image</label>
                            <input type="text" class="form-control" id="article_image" name="article[params][image]" placeholder="Enter the name of the article's header image" value="{{ article.params.image }}" />
                        </div>
                    </div>

                    <div class="box-footer">
                        {% if not isNew %}<input type="hidden" name="article[id]" value="{{ article.id }}" />{% endif %}
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="{{ uri.base.full }}manager/articles" class="btn btn-default">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Additional Details</h3>
                </div>
                <form role="form">
                    <div class="box-body">
                        {% if not isNew %}
                        <div class="form-group">
                            <label>Article ID</label>
                            <p class="form-control-static">{{ article.id }}</p>
                        </div>
                        <div class="form-group">
                            <label>Created Time</label>
                            <p class="form-control-static">{{ renderDate(article.dateAdded) }} by {{ article.createdBy.name }}</p>
                        </div>
                        <div class="form-group">
                            <label>Last Updated</label>
                            <p class="form-control-static">{{ renderDate(article.dateModified) }} by {{ article.modifiedBy.name }}</p>
                        </div>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block bodyJavaScript %}
    {{ parent() }}
    <script src="//cdn.ckeditor.com/4.4.5/standard/ckeditor.js"></script>
    <script type="text/javascript">
        $(function() {
            CKEDITOR.replace('article_editor');
        });
    </script>
{% endblock %}

{% macro selectCategoryList(selected) %}
    {% set categories = getCategoryList('articles') %}
    <select name="article[category]" id="article_category" class="form-control">
        <option value="">-- Select a Category --</option>
        {% for category in categories %}
        <option value="{{ category.id }}"{% if selected == category.id %} selected="selected"{% endif %}>{{ category.title }}</option>
        {% endfor %}
    </select>
{% endmacro %}
