{% set currentUser = getUser() %}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" dir="ltr"{% block htmlClass %}{% endblock %}>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Manage Michael's Website{% endblock %}</title>
        {% block headJavaScript %}
            <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
            <!--[if lt IE 9]>
            <script src="//cdn.jsdelivr.net/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="//cdn.jsdelivr.net/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        {% endblock %}
        {% block headCSS %}
            <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css">
            <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
            <link href="{{ asset('css/AdminLTE.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>
    <body class="{% block bodyClass %}skin-blue{% endblock %}">
        {% block primaryContentContainer %}
            <header class="header">
                <a href="{{ route('manager') }}" class="logo">
                    Michael's Website
                </a>
                <nav class="navbar navbar-static-top" role="navigation">
                    <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="navbar-right">
                        <ul class="nav navbar-nav">
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="glyphicon glyphicon-user"></i>
                                    <span>{{ currentUser.name }} <i class="caret"></i></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="user-header bg-light-blue">
                                        <img src="{{ gravatar(currentUser.email, 90) }}" class="img-circle" alt="{{ currentUser.name }}'s Gravatar" />
                                        <p>{{ currentUser.name }}</p>
                                    </li>
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="#" class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="{{ route('logout') }}" class="btn btn-default btn-flat">Sign out</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <div class="wrapper row-offcanvas row-offcanvas-left">
                <aside class="left-side sidebar-offcanvas">
                    <section class="sidebar">
                        <div class="user-panel">
                            <div class="pull-left image">
                                <img src="{{ gravatar(currentUser.email, 45) }}" class="img-circle" alt="{{ currentUser.name }}'s Gravatar" />
                            </div>
                            <div class="pull-left info">
                                <p>Hello, {{ currentUser.name }}</p>
                            </div>
                        </div>
                        <ul class="sidebar-menu">
                            <li class="{{ currentRoute('manager') ? "active" : "" }}">
                                <a href="{{ route('manager') }}">
                                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                                </a>
                            </li>
                            <li class="treeview{{ routeParts[1] == "articles" ? " active" : "" }}">
                                <a href="#">
                                    <i class="fa fa-book"></i>
                                    <span>Article Manager</span>
                                    <i class="fa fa-angle-left pull-right"></i>
                                </a>
                                <ul class="treeview-menu">
                                    <li class="{{ currentRoute('manager/articles') ? " active" : "" }}"><a href="{{ route('manager/articles') }}"><i class="fa fa-angle-double-right"></i> Articles</a></li>
                                    <li class="{{ currentRoute('manager/articles/categories') ? " active" : "" }}"><a href="{{ route('manager/articles/categories') }}"><i class="fa fa-angle-double-right"></i> Categories</a></li>
                                </ul>
                            </li>
                            <li class="{{ routeParts[1] == "users" ? "active" : "" }}">
                                <a href="{{ route('manager/users') }}">
                                    <i class="fa fa-users"></i> <span>User Manager</span>
                                </a>
                            </li>
                        </ul>
                    </section>
                </aside>
                <aside class="right-side">
                    <section class="content-header">
                        <h1>{% block contentHeaderText %}{% endblock %}</h1>
                        <ol class="breadcrumb">
                            <li><a href="{{ route('manager') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                            {% block breadcrumb %}{% endblock %}
                        </ol>
                    </section>
                    <section class="content">
                        {% for type, flashMessages in messageQueue() %}
                            {% for flashMessage in flashMessages %}
                                <div class="alert alert-{{ type }}">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        {% block content %}{% endblock %}
                    </section>
                </aside>
            </div>
        {% endblock %}
        {% block bodyJavaScript %}
            <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
            <script src="{{ asset('js/AdminLTE.js') }}"></script>
        {% endblock %}
    </body>
</html>
