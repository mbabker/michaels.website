{% for article in articles|reverse %}
    <div class="post-preview">
        <a href="{{ route(section ~ '/' ~ article.alias) }}">
            <h2 class="post-title">
                {{ article.title }}
            </h2>
        </a>
        <p class="post-meta">Posted by {{ article.author }} on {{ article.publish_up|date('l, F j, Y') }}</p>
        <div class="row text-center">
            <div class="col-sm-2">
                <div class="fb-like" data-href="{{ route(section ~ '/' ~ article.alias) }}" data-layout="button" data-action="like" data-show-faces="true" data-share="true" style="display: inline-flex"></div>
            </div>
            <div class="col-sm-2">
                <a href="https://twitter.com/share" class="twitter-share-button" data-url="{{ route(section ~ '/' ~ article.alias) }}" data-text="{{ article.title }}" data-via="mbabker">Tweet</a>
            </div>
            <div class="col-sm-2">
                <g:plusone size="medium" count="true" href="{{ route(section ~ '/' ~ article.alias) }}"></g:plusone>
            </div>
        </div>
        <p>{{ getFirstParagraph(article.text) }}</p>
    </div>
    {% if not loop.last %}
        <hr />
    {% endif %}
{% endfor %}
