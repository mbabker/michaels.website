<div class="post-preview">
    <a href="{{ route(section ~ '/' ~ article.alias) }}">
        <h3>
            {{ article.title }}
        </h3>
    </a>
    <p class="post-meta">Posted by {{ article.author }} on {{ article.publishUp|date('l, F j, Y') }}</p>
    <p>{{ article.preview ?: first_paragraph(article.text) }}</p>
</div>
